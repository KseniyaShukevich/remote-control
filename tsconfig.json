{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "strictNullChecks": true,
    "strictFunctionTypes": true, 
    "strictBindCallApply": true, 
    "esModuleInterop": true,
    "strictPropertyInitialization": true,
    "strict": true,        
    "noImplicitAny": true,                             
  },
  "ts-node": {
    "esm": true,
  },
  "include": ["./index.ts", "server/**/*"],
}